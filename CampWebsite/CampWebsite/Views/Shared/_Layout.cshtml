                </a>
                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://twitter.com/?lang=zh-Hant" role="button">
                    <i class="fab fa-twitter"></i>
                </a>

                <!-- Google -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.google.com/" role="button">
                    <i class="fab fa-google"></i>
                </a>

                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.instagram.com/" role="button">
                    <i class="fab fa-instagram"></i>
                </a>

                <!-- Linkedin -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://tw.linkedin.com/" role="button">
                    <i class="fab fa-linkedin-in"></i>
                </a>

                <!-- Github -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://github.com/" role="button">
                    <i class="fab fa-github"></i>
                </a>
            </section>
            <!-- Section: Social media -->
            <!-- Section: Form -->
            <section class="">
                <form action="">
                    <!--Grid row-->
                    <div class="row d-flex justify-content-center">
                        <!--Grid column-->
                        <div class="col-auto">
                            <p class="pt-2">
                                <strong>訂閱最新消息</strong>
                            </p>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-5 col-12">
                            <!-- Email input -->
                            <div class="form-outline form-white mb-4">
                                <input type="email" id="form5Example2" class="form-control" placeholder="請輸入電子信箱" />
                            </div>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-auto">
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-outline-light mb-4" id="subb">訂閱</button>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </form>
            </section>
            <!-- Section: Form -->
            <!-- Section: Text -->
            <section class="mb-4">
                <p>資展國際x露過人間</p>
            </section>
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2022 Copyright:
            <a class="text-white" href="/Home/Index">122-one</a>
        </div>
        <!-- Copyright -->
    </footer>


    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scriptBody", required: false)
    <script>
        $(function () {
            $("#linkProfile").click(function () {
                localStorage.setItem("activeTab", "#p1Profile");
            });
            $("#linkFavorite").click(function () {
                localStorage.setItem("activeTab", "#p2Favorite");
            });
            $("#linkOrder").click(function () {
                localStorage.setItem("activeTab", "#p3Order");
            });
        });
    </script>
    <script>
        $("#subb").click(function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("subscribe", "Home")',
                cache: false,
                dataType: "json",
                data: { "userEmail": $("#form5Example2").val() },
                success: function () {
                    $("#sendMailAgain").toggle()
                    $("sendingMail").toggle()
                    swal.fire({
                        icon: 'success',
                        title: '已成功訂閱',
                        showConfirmButton: false,
                    })
                },
                error: function () {
                    alert("Found error when using Ajax!!");
                }
            })
            return false;
        });
    </script>
</body>
